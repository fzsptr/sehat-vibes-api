{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node", "jest"],

    /* Paths */
    "rootDir": ".",
    "outDir": "dist",

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Source maps */
    "sourceMap": true
  },
  "include": [
    "src/**/*", "generated",
  ],
  "exclude": ["node_modules", "dist"]
}
